[all]
indent_size = 4
use_spaces = yes
max_line_length = 120
max_lines_per_file = 1000

[all.markdown]
files = *.md
bears = MarkdownBear

[all.filenames]
files = ./**/*.go
bears = FilenameBear
file_naming_convention = snake

[all.yaml]
bears = YAMLLintBear

[all.commit]
bears = GitCommitBear
shortlog_length = 72
shortlog_trailing_period = no
ignore_length_regex = https?://
